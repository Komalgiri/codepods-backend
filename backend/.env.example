# Database Configuration
DATABASE_URL="your_database_connection_string_here"

# JWT Configuration (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET="your_jwt_secret_here_minimum_64_characters"

# Encryption Key for GitHub Tokens (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY="your_encryption_key_here_minimum_32_characters"

# GitHub OAuth Configuration
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# Gemini AI Configuration
GEMINI_API_KEY="your_gemini_api_key"

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL="http://localhost:5173"

# Environment
NODE_ENV="development"
